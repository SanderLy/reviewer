<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:id="@+id/imgAndroid"
        android:src="@drawable/palette"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="X1, Y1 = "
        android:id="@+id/textView3"
        android:layout_below="@+id/imgAndroid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="0"
        android:id="@+id/txtX1"
        android:layout_below="@+id/imgAndroid"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toLeftOf="@+id/txtY2"
        android:layout_toStartOf="@+id/txtY2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="0"
        android:id="@+id/txtY1"
        android:layout_alignTop="@+id/txtX1"
        android:layout_toRightOf="@+id/txtX1"
        android:layout_alignBottom="@+id/txtX1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="X2, Y2 = "
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"

        android:text="0"
        android:id="@+id/txtX2"
        android:layout_below="@+id/txtX1"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"

        android:text="0"
        android:id="@+id/txtY2"
        android:layout_below="@+id/txtX1"
        android:layout_toRightOf="@+id/txtX2"
        android:layout_toEndOf="@+id/txtX2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Difference = "
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Motion = "
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Quadrant = "
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"

        android:text="0"
        android:id="@+id/txtdiffX"
        android:layout_below="@+id/txtX2"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"

        android:text="0"
        android:id="@+id/txtdiffY"
        android:layout_above="@+id/textView6"
        android:layout_toRightOf="@+id/txtdiffX"
        android:layout_toEndOf="@+id/txtdiffX" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/txtmotion"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/txtquadrant"
        android:layout_below="@+id/txtmotion"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />
</RelativeLayout>